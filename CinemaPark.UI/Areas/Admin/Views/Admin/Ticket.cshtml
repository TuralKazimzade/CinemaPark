
@{
    ViewData["Title"] = "Ticket";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class=" d-flex justify-content-center p-2 card mx-auto shadow"  style="width:1000px">
    <div class="row justify-content-end p-2 " >
        <button class="btn btn-primary w-25" data-bs-toggle="modal" data-bs-target="#ticketModal" >Add</button>
    </div>
    <table id="ticketTable" class="table table-striped table-bordered col-6" >
        <thead class="bg-primary text-light" >
            <tr>
                <th>Id</th>
                <th>SeatNumber</th>
                <th>Price</th>
                <th>PurchaseDate</th>
            </tr>
        </thead>
        <tbody>

        </tbody>

    </table>

</div>

<div class="modal" tabindex="-1" id="ticketModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ticket Sales</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="row" >
                    <div class="mb-3 col-4">
                        <label for="SeatNumber" class="form-label">Seat Number</label>
                        <input  type="number" class="form-control" id="seatNumber"/>
                    </div>
                    <div class="mb-3 col-4">
                        <label for="Price" class="form-label">Price</label>
                        <input type="number" class="form-control" id="price" />
                    </div>
                    <div class="mb-3 col-4  p-0">
                        <label for="PurchaseDate" class="form-label">Purchase Date</label>
                        <input type="datetime" class="form-control" id="purchaseDate" />
                    </div>
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/AdminJs/TicketsDataTables.js"></script>
    <script src="~/js/AdminJs/Ticket.js"></script>
}

